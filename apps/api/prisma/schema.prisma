generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Item {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())

  @@map("items")
}

model Note {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())

  @@map("notes")
}

model Heartbeat {
  id        String   @id @default(uuid())
  message   String
  createdAt DateTime @default(now())

  @@map("heartbeats")
}
